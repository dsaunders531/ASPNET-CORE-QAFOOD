@model ReviewStartViewModel

@{
    Model.PageMeta.PageTitle = "Review";
    Model.PageMeta.Description = "Start a review";
    Model.PageMeta.AddKeyword("Perform a review");
    Model.PageMeta.RobotsFollow = false;
    Model.PageMeta.RobotsIndex = false;

}

<h2>@Model.FoodParcel.Name - @Model.TestName</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Review" asp-action="ReviewProcess" method="post" class="form-horizontal" asp-antiforgery="true">
    @* select food item from dropdown *@
    <input type="hidden" name="TestId" value="@Model.TestId" />
    <input type="hidden" name="FoodParcelId" value="@Model.FoodParcel.Id" />
    <div class="form-group row">
        <div class="col-sm-6">
            <label asp-for="SelectedFoodItemId" class="control-label"></label>
        </div>
        <div class="col-sm-6">
            <select asp-for="SelectedFoodItemId" asp-items="@Model.FoodItems" class="form-control"></select>
        </div>        
    </div>

    <div class="form-group row btn-group">
        <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-save"> </i> Review selected item</button>
        <button type="reset" class="btn btn-warning btn-lg"><i class="fa fa-close"> </i> Reset</button>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}