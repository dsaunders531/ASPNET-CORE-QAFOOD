@model LoginViewModel

@{
    Model.PageMeta.PageTitle = "Login";
    Model.PageMeta.Description = "Login";
    Model.PageMeta.AddKeyword("Login");
    Model.PageMeta.RobotsFollow = false;
    Model.PageMeta.RobotsIndex = false;
}

<h1>Login</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" asp-antiforgery="true">
    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
    <div class="form-group row">
        <label asp-for="Email" for="Email" class="control-label col-sm-4"></label>
        <div class="col-sm-4">
            <input id="Email" asp-for="Email" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Password" for="Password" class="control-label col-sm-4"></label>
        <div class="col-sm-4">
            <input id="Password" asp-for="Password" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-group row btn-group">
        <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-unlock"> </i> Login</button>
        <a class="btn btn-default btn-lg" href="@Model.ReturnUrl ?? /"><i class="fa fa-eraser"> </i> Cancel</a>
    </div>

</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}